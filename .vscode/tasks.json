{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Docker: Start Development Environment",
			"type": "shell",
			"command": "docker",
			"args": [
				"compose",
				"up",
				"--build"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}